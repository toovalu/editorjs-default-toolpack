{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,


    /* For development only - should be removed when made stable*/
    "paths": {
        "strapi-plugin-react-editorjs": ["./node_modules/@xenobytezero/strapi-plugin-react-editorjs"],
        "strapi-plugin-react-editorjs/*": ["./node_modules/@xenobytezero/strapi-plugin-react-editorjs/*"]
    }

  },
  "include": ["src", "types"]
}
